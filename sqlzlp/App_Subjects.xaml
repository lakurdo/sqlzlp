<Window x:Class="sqlzlp.App_Subjects"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sqlzlp"
        mc:Ignorable="d"
        Title="Ap_Sub" Height="450" Width="600">
    
    <StackPanel VerticalAlignment="Center" 
                HorizontalAlignment="Center">

            <TextBlock Text="Название предмета" HorizontalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="20"/>
            <TextBox x:Name="sub_nBlock" 
                     Height="30" Width="200"
                     Margin="50"/>
        

        <Button x:Name="add_btn" Grid.Row="3" 
        Style="{StaticResource ButtonStyle}"
        HorizontalAlignment="Center" 
        Height="40" Width="100" 
Content="Добавить" FontSize="20" 
        Click="AddSubButton_Click"/>
    </StackPanel>
</Window>
